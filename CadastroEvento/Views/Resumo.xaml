<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEvento.Views.Resumo"
             Title="Resumo"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Bisque">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="{Binding Nome}" FontSize="Medium" />
        <Label Text="{Binding Local}" />
        <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DataTermino, StringFormat='Término: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding Duracao, StringFormat='Duração: {0} dia(s)'}" />
        <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" />
        <Label Text="{Binding CustoTotal, StringFormat='Custo Total: {0:C}'}"/>
    </StackLayout>
</ContentPage>